<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.marcelo.inventario.Registro">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Registrar Usuario"
        android:id="@+id/lblRegistroUsuario"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#060606" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Nombre"
        android:id="@+id/lblNombre"
        android:layout_below="@+id/lblRegistroUsuario"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="25dp"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtNombre"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lblNombre"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Usuario"
        android:id="@+id/lblUsuarioRe"
        android:layout_below="@+id/txtNombre"
        android:layout_alignParentLeft="true"
         />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtUsuarioRe"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lblUsuarioRe"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Contraseña"
        android:id="@+id/lblcontracenaRe"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtUsuarioRe"
        android:layout_alignParentLeft="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/txtContraseñaRe"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lblcontracenaRe"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registrar"
        android:id="@+id/btnRegistrar"
        android:onClick="registrar"
        android:layout_below="@+id/txtContraseñaRe"
        android:layout_alignParentLeft="true"
        android:layout_toStartOf="@+id/lblRegistroUsuario" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancelar"
        android:id="@+id/btbCancelar"
        android:onClick="cancelar"
        android:layout_alignTop="@+id/btnRegistrar"
        android:layout_toRightOf="@+id/lblRegistroUsuario"
        android:layout_alignParentEnd="true" />




</RelativeLayout>
